<h2>What is the name of your trip?</h2>

<%= form_for @trip, url: {action: "create"} do |f| %> 
  <div class="form-group">	
    <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: 'enter trip name' %>
  </div>
	<%= f.submit 'Get Started!', :class => 'button right' %>
  <% end %>