<!-- getting country data from DB -->
<% country_array = @countries.map { |c| [c.country, c.id] } %>


<!-- for option 1 -->

<section class="search">
  <div class="row">
    <div class="small-12 large-8 columns large-centered">
      <hr /><br /><br />
      <h1>Option 1: Country and Budget</h1>
      <br /><br />

      <%= form_tag(budgets_compute_path, method: :post, id: 'budgets_form1') do %>

        <%= hidden_field_tag :option, 1 %>
        <div class="row">
          <div class="large-6 small-12 columns">
            <%= label_tag :country %>
            <%= select_tag "country", options_for_select(country_array, "Select Country") %>
          </div>
          <div class="large-6 small-12 columns">
            <%= label_tag :budget, "Budget in CAD" %>
            <%= number_field_tag :budget %>
          </div>
        </div>
        <div class="row">
          <%= submit_tag("Submit", :class => "button large-6 small-12 columns large-centered", :id => "output1") %>
        </div>
      <% end %>
    </div>
    <br /><br />
  </div>

  <div class="row">
    <div class="large-6 small-12 columns large-centered">
      <div id="outputbox1">
        
      </div>
    </div>
  </div>


  <div class="row">
    <div class="large-6 columns" id="mypie1">

    </div>
  </div>


  <div class="row">
    <div class="large-6 columns">
      <table id="myFunTable1" style="visibility:hidden;">
        <thead>
          <th>Type of Expenses</th>
          <th>Daily Cost in CAD</th>
        </thead>
        <tbody>
          
        </tbody>
      </table>
    </div>
  </div>
</section>


